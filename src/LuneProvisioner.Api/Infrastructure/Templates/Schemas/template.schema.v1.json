{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://luneprovisioner.dev/schema/template/v1",
  "title": "Lune Template Spec v1",
  "type": "object",
  "required": ["name", "region"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 32,
      "pattern": "^[a-z0-9-]+$"
    },
    "region": {
      "type": "string",
      "enum": ["us-east-1", "us-west-2", "sa-east-1"]
    },
    "nodeCount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 20,
      "default": 3
    }
  },
  "additionalProperties": false
}
