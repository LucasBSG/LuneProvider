{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=luneprovisioner.db"
  },
  "AgentWorker": {
    "UseTerraformCli": true,
    "TerraformBinaryPath": "terraform",
    "TerraformRequiredVersion": "1.8.0",
    "TerraformWorkspaceRootPath": "/tmp/luneprovisioner-jobs",
    "CleanupTerraformWorkspace": true,
    "JobExecutionTimeoutSeconds": 30,
    "MaxNodeCountWithoutApproval": 8,
    "CriticalEnvironments": [
      "prod",
      "production"
    ]
  },
  "AccessControl": {
    "Tokens": [
      {
        "Token": "dev-approver-token",
        "UserId": "platform-lead",
        "Roles": [
          "Approver"
        ]
      },
      {
        "Token": "dev-admin-token",
        "UserId": "platform-admin",
        "Roles": [
          "Admin",
          "Approver"
        ]
      }
    ]
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173"
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
